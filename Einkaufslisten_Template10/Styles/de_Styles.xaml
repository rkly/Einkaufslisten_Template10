<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Einkaufslisten_Template10.Styles"
    xmlns:controls="using:Template10.Controls">

    <Style TargetType="Button" x:Key="de_btn_style">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF3868E8"/>
                    <GradientStop Color="#FF25428F" Offset="0.887"/>
                    <GradientStop Color="#FF254291" Offset="0.967"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <SolidColorBrush x:Key="de_solidColorBrush_RelativePanel" Color="#FF6D9CC3" Opacity="0.625"/>
</ResourceDictionary>